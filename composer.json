{
    "name": "pdf-lib/pdf-lib",
    "description": "A PHP PDF library",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "PdfLib\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PdfLib\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Galih Lasahido",
            "email": "galih.lasahido@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "phpseclib/phpseclib": "~3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse src tests --level=max",
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run --diff"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable"
}
